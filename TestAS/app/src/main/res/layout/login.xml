<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/login_iv_photo"
        android:src="@drawable/all"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="200dp" />
    <TextView
    android:id="@+id/login_tv_controduce"
    android:text="hello"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="30dp"
    android:layout_centerHorizontal="true"
    android:textStyle="italic"
    android:layout_below="@id/login_iv_photo"
    android:layout_width="wrap_content"
    android:layout_height="20dp" />


    <com.example.josie.testas.UI.ClearEdittext
        android:id="@+id/login_et_userid"
        android:layout_below="@+id/login_tv_controduce"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:maxLines="1"
        android:singleLine="true"
        android:hint="请输入学号..."
        android:drawableLeft="@drawable/login_user"
        android:drawableRight="@drawable/edit_delete"
        android:layout_margin="10dp"/>

    <com.example.josie.testas.UI.ClearEdittext
        android:id="@+id/login_et_password"
        android:layout_below="@+id/login_et_userid"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:maxLines="1"
        android:singleLine="true"
        android:hint="请输入密码..."
        android:drawableLeft="@drawable/login_password"
        android:drawableRight="@drawable/edit_delete"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/login_bt_sure"
        android:background="#00000000"
        android:layout_below="@+id/login_et_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="登陆"
        android:layout_width="270dp"
        android:layout_height="40dp" />

</RelativeLayout>
